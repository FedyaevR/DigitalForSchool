@page
@model DigitalForSchool.Pages.Admin.Students.RegisterStudentsModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Зарегистрировать новых студентов";
    
}
<div class="col-4 float-right">
    <a asp-page="../AdminPanel">Вернуться в панель администратора</a>
</div>
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<div class="mt-3">
    <button type="button" name="addStudent" id="addStudent" class="btn btn-primary">Добавить студента</button>
</div>
<form method="post" class="form-horizontal mt-3">
    <div asp-validation-summary="ModelOnly"></div>
    <table class="table table-striped" id="students">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Отчество</th>
            <th>Учебное учреждение</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Input.Count; i++)
        {
            var student = Model.Input[i];
            <tr>
                <td>
                    <input asp-for="Input[i].FirstName"/>
                    <span asp-validation-for="Input[i].FirstName" class="text-danger"></span>
                </td>
                <td>
                    <input asp-for="Input[i].LastName"/>
                    <span asp-validation-for="Input[i].LastName" class="text-danger"></span>
                </td>
                <td>
                    <input asp-for="Input[i].Patronymic" /> 
                    <span asp-validation-for="Input[i].Patronymic" class="text-danger"></span>
                </td>
                    <td>
                    <input asp-for="Input[i].SchoolName" /> 
                    <span asp-validation-for="Input[i].SchoolName" class="text-danger"></span>
                </td>
                <td>
                    <button class="btn btn-secondary remove">Remove</button>
                </td>
            </tr>               
        }
    </tbody>
</table>

<button type="submit" class="btn btn-primary">Сохранить</button>
</form>

@section Scripts{
    <script src="~/js/addStudent.js"></script>
}

