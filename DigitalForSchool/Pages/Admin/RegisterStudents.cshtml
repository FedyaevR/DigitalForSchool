@page
@model DigitalForSchool.Pages.Admin.RegisterStudentsModel
@{
    ViewData["Title"] = "Зарегистрировать новых студентов";
    
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>
<div class="mt-3">
    <div>
        <a  asp-page="/Admin/AdminPanel" class="btn btn-primary">Вернуться на панель администратора</a> @*Переместить кнопку*@
    </div>
</div>
<form method="post" class="form-horizontal">
    <label for="numberOfStudent">Укажите количество студентов</label>
    <div class="mt-3">
        <input type="number" name="numberOfStudent" id="numberOfStudent" min="1" max="15"/>
    </div>
    <button button ="submit" class="btn btn-primary mt-3">Добавить студентов</button>

</form>

@for (int i = 0; i < Model.Input.Count; i++)
{
        var item = Model.Input[i];
        <div>
            <p>Ученик #@(i + 1)</p>
            <p>Login: @item.Login</p>
            <p>Password: @item.Password</p>
        </div>
        <br>
}

