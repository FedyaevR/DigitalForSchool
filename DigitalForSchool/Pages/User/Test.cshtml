@page "{id}/{questionId?}"
@model DigitalForSchool.Pages.User.TestModel
@{
    ViewData["Title"] = "Тест";
}
<div class="row d-flex flex-column align-items-center">
    <form method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly"></div>
   
    <p>@Model.Input[Model.QuestionId].Name</p>
    
    @for (int i = 0; i < Model.Input[Model.QuestionId].Answers.Count; i++)
    {
        <div class="form-check">
            <input class="form-check-input d-flex flex-column align-items-center" type="radio" name="@Model.Input[Model.QuestionId].Name" value="@Model.Input[Model.QuestionId].Answers[i].Text">
            <label class="form-check-label d-flex flex-column align-items-center" asp-for="@Model.Input[Model.QuestionId].Answers[i].Text">@Model.Input[Model.QuestionId].Answers[i].Text</label>
        </div>
    }
    <input type="hidden" asp-for="QuestionId" />
    <button type="submit" class="btn btn-primary">Ответить</button>
</form>
</div>
