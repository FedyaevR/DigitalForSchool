@page
@model DigitalForSchool.Pages.User.TestResultModel
@{
    ViewData["Title"] = "Результаты теста";

}
<h2>@ViewData["Title"]</h2>
<p>Правильных ответов: @Model.Score</p>
@for(int i =0; i< Model.Questions.Count; i++)
{
    <p>@Model.Questions[i].Name</p>
    foreach (var answer in Model.Questions[i].Answers)
    {
        if (answer.IsRight == true)
        {
            if (answer.Text == Model.StudentAnswers[i])
            {
                <p>Вы ответили правильно</p>
                <p>@answer.Text</p>
            }
            else
            {
                <p>на этот вопрос Вы ответили неверно</p>   
                <p>Ваш ответ: @Model.StudentAnswers[i]</p>
                <p>Правильный ответ: @answer.Text</p>
            }
            
            
        }
    }
    <br/>
}